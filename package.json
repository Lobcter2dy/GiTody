{
  "name": "github-manager",
  "version": "1.0.0",
  "description": "GitHub Repository Manager - Web and Electron Application",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "npm run build && electron . --no-sandbox",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron . --no-sandbox\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:standalone": "npm run build && electron . --no-sandbox"
  },
  "keywords": [
    "github",
    "repository",
    "manager",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "systeminformation": "5.29.1"
  },
  "build": {
    "appId": "com.githubmanager.app",
    "productName": "GitHub Manager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
